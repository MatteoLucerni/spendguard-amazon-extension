{
    "manifest_version": 3,
    "name": "Amazon Spending Tracker",
    "version": "1.0.0",
    "icons": {
        "16": "assets/images/icons/amz_icon.png",
        "48": "assets/images/icons/amz_icon.png",
        "128": "assets/images/icons/amz_icon.png"
    },
    "permissions": [
        "storage",
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "https://www.amazon.it/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.amazon.it/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/images/icons/amz_icon.png"
            ],
            "matches": [
                "https://www.amazon.it/*"
            ]
        }
    ]
}