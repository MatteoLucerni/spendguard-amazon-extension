{
    "manifest_version": 3,
    "name": "SpendGuard for Amazon™",
    "short_name": "SpendGuard",
    "description": "Track and control Amazon™ spending. Floating widget, checkout warnings, time-lock blocking. Privacy-first.",
    "version": "1.0.0",
    "icons": {
        "16": "assets/images/icons/amz_icon.png",
        "48": "assets/images/icons/amz_icon.png",
        "128": "assets/images/icons/amz_icon.png"
    },
    "permissions": [
        "storage",
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "https://www.amazon.com/*",
        "https://www.amazon.co.uk/*",
        "https://www.amazon.de/*",
        "https://www.amazon.fr/*",
        "https://www.amazon.it/*",
        "https://www.amazon.es/*",
        "https://www.amazon.co.jp/*",
        "https://www.amazon.ca/*",
        "https://www.amazon.com.au/*",
        "https://www.amazon.in/*",
        "https://www.amazon.com.br/*",
        "https://www.amazon.nl/*",
        "https://www.amazon.se/*",
        "https://www.amazon.pl/*",
        "https://www.amazon.sg/*",
        "https://www.amazon.com.mx/*",
        "https://www.amazon.ae/*",
        "https://www.amazon.sa/*",
        "https://www.amazon.com.tr/*",
        "https://www.amazon.eg/*",
        "https://www.amazon.com.be/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.amazon.com/*",
                "https://www.amazon.co.uk/*",
                "https://www.amazon.de/*",
                "https://www.amazon.fr/*",
                "https://www.amazon.it/*",
                "https://www.amazon.es/*",
                "https://www.amazon.co.jp/*",
                "https://www.amazon.ca/*",
                "https://www.amazon.com.au/*",
                "https://www.amazon.in/*",
                "https://www.amazon.com.br/*",
                "https://www.amazon.nl/*",
                "https://www.amazon.se/*",
                "https://www.amazon.pl/*",
                "https://www.amazon.sg/*",
                "https://www.amazon.com.mx/*",
                "https://www.amazon.ae/*",
                "https://www.amazon.sa/*",
                "https://www.amazon.com.tr/*",
                "https://www.amazon.eg/*",
                "https://www.amazon.com.be/*"
            ],
            "js": [
                "src/constants.js",
                "src/utils.js",
                "src/styles.js",
                "src/settings.js",
                "src/state.js",
                "src/popup-ui.js",
                "src/settings-ui.js",
                "src/data.js",
                "src/onboarding.js",
                "src/checkout.js",
                "src/lock.js",
                "src/main.js"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/images/icons/amz_icon.png"
            ],
            "matches": [
                "https://www.amazon.com/*",
                "https://www.amazon.co.uk/*",
                "https://www.amazon.de/*",
                "https://www.amazon.fr/*",
                "https://www.amazon.it/*",
                "https://www.amazon.es/*",
                "https://www.amazon.co.jp/*",
                "https://www.amazon.ca/*",
                "https://www.amazon.com.au/*",
                "https://www.amazon.in/*",
                "https://www.amazon.com.br/*",
                "https://www.amazon.nl/*",
                "https://www.amazon.se/*",
                "https://www.amazon.pl/*",
                "https://www.amazon.sg/*",
                "https://www.amazon.com.mx/*",
                "https://www.amazon.ae/*",
                "https://www.amazon.sa/*",
                "https://www.amazon.com.tr/*",
                "https://www.amazon.eg/*",
                "https://www.amazon.com.be/*"
            ]
        }
    ]
}